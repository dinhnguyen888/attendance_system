<odoo>
    <!-- Form View for Attendance with Face Image -->
    <record id="view_hr_attendance_form_inherit_face" model="ir.ui.view">
        <field name="name">hr.attendance.form.inherit.face</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='worked_hours']" position="after">
                <field name="check_in_image" widget="image" options="{'size': [200, 200]}" readonly="1"/>
                <field name="check_in_confidence" widget="percentage" readonly="1"/>
                <field name="check_in_message" readonly="1"/>
                <field name="check_in_wifi_ip" readonly="1"/>
                <field name="check_in_wifi_validated" readonly="1"/>
                <field name="check_out_image" widget="image" options="{'size': [200, 200]}" readonly="1" invisible="not check_out"/>
                <field name="check_out_confidence" widget="percentage" readonly="1" invisible="not check_out"/>
                <field name="check_out_message" readonly="1" invisible="not check_out"/>
                <field name="check_out_wifi_ip" readonly="1" invisible="not check_out"/>
                <field name="check_out_wifi_validated" readonly="1" invisible="not check_out"/>
            </xpath>
            
            <!-- Thêm button hiển thị thông tin quyền -->
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="action_show_permissions_info" 
                            type="object" 
                            string="ℹ️ Thông tin quyền" 
                            class="btn-info"
                            help="Xem thông tin quyền của bạn đối với bản ghi này"/>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Tree View for Attendance with Face Image -->
    <record id="view_hr_attendance_tree_inherit_face" model="ir.ui.view">
        <field name="name">hr.attendance.tree.inherit.face</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='worked_hours']" position="after">
                <!-- Thông tin check-in -->
                <field name="check_in_confidence" widget="percentage" optional="show" string="Độ tin cậy check-in"/>
                <field name="check_in_wifi_validated" optional="show" string="WiFi check-in hợp lệ"/>
                
                <!-- Thông tin check-out -->
                <field name="check_out_confidence" widget="percentage" optional="show" string="Độ tin cậy check-out"/>
                <field name="check_out_wifi_validated" optional="show" string="WiFi check-out hợp lệ"/>
                
                <!-- Giữ lại trường cũ để tương thích ngược -->
                <field name="verification_confidence" widget="percentage" optional="hide"/>
                <field name="verification_message" optional="hide"/>
                <field name="wifi_ip" optional="hide"/>
                <field name="wifi_validated" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Action for Webcam Attendance -->
    <record id="action_webcam_attendance" model="ir.actions.server">
        <field name="name">Điểm danh khuôn mặt</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="state">code</field>
        <field name="code">action = {'type': 'ir.actions.act_url', 'url': '/attendance/webcam', 'target': 'self'}</field>
    </record>
    
    <!-- Menu for Face Attendance -->
    <menuitem id="menu_webcam_attendance"
              name="Điểm danh khuôn mặt"
              parent="hr_attendance.menu_hr_attendance_root"
              action="action_webcam_attendance"
              sequence="10"/>
</odoo>
