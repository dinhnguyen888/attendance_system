<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_leave_request_tree" model="ir.ui.view">
        <field name="name">leave.request.tree</field>
        <field name="model">leave.request</field>
        <field name="arch" type="xml">
            <tree string="Đơn nghỉ phép" decoration-info="state=='draft'" decoration-success="state=='approved'" decoration-warning="state in ['submitted', 'manager_approved', 'hr_approved']" decoration-danger="state=='rejected'">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="leave_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="days_requested"/>
                <field name="state"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_leave_request_form" model="ir.ui.view">
        <field name="name">leave.request.form</field>
        <field name="model">leave.request</field>
        <field name="arch" type="xml">
            <form string="Đơn nghỉ phép">
                <header>
                    <button name="action_submit" type="object" string="Gửi đơn" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_manager_approve" type="object" string="Duyệt (QL)" class="btn-success" invisible="state != 'submitted'" groups="attendance_system.group_attendance_department_manager"/>
                    <button name="action_hr_approve" type="object" string="Duyệt (HR)" class="btn-success" invisible="state != 'manager_approved'" groups="attendance_system.group_attendance_hr"/>
                    <button name="action_approve" type="object" string="Duyệt" class="btn-success" invisible="state not in ['submitted', 'manager_approved', 'hr_approved']" groups="attendance_system.group_attendance_hr"/>
                    <button name="action_reject" type="object" string="Từ chối" class="btn-danger" invisible="state not in ['submitted', 'manager_approved']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,manager_approved,hr_approved,approved,rejected"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_configure_email" type="object" string="Cấu hình Email" class="btn-info" groups="base.group_system"/>
                        <button name="action_test_email_config" type="object" string="Kiểm tra Email" class="btn-warning" groups="base.group_system"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" readonly="1"/>
                            <field name="department_id" readonly="1"/>
                            <field name="manager_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="leave_type"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="days_requested" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="reason" placeholder="Nhập lý do nghỉ phép..."/>
                    </group>
                    <group string="Thông tin duyệt" invisible="state in ['draft', 'submitted']">
                        <group>
                            <field name="manager_approval_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="hr_approval_date" readonly="1"/>
                        </group>
                    </group>
                    <group string="Lý do từ chối" invisible="state != 'rejected'">
                        <field name="rejection_reason" readonly="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_leave_request_search" model="ir.ui.view">
        <field name="name">leave.request.search</field>
        <field name="model">leave.request</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm đơn nghỉ phép">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="leave_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <separator/>
                <filter string="Nháp" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Đã gửi" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="QL đã duyệt" name="manager_approved" domain="[('state', '=', 'manager_approved')]"/>
                <filter string="HR đã duyệt" name="hr_approved" domain="[('state', '=', 'hr_approved')]"/>
                <filter string="Đã duyệt" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Từ chối" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <separator/>
                <filter string="Hôm nay" name="today" domain="[('create_date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                <filter string="Tuần này" name="this_week" domain="[('create_date', '>=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="Tháng này" name="this_month" domain="[('create_date', '>=', context_today().strftime('%Y-%m-01'))]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Nhân viên" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Phòng ban" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Loại nghỉ" name="group_leave_type" context="{'group_by': 'leave_type'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_leave_request" model="ir.actions.act_window">
        <field name="name">Đơn nghỉ phép</field>
        <field name="res_model">leave.request</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_leave_request_search"/>
        <field name="context">{'search_default_today': 1}</field>
    </record>

    <menuitem id="menu_leave_request" name="Đơn nghỉ phép" parent="hr_attendance.menu_hr_attendance_root" action="action_leave_request" sequence="30"/>

    <record id="view_leave_request_reject_wizard_form" model="ir.ui.view">
        <field name="name">leave.request.reject.wizard.form</field>
        <field name="model">leave.request.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Từ chối đơn nghỉ phép">
                <group>
                    <field name="leave_request_id" readonly="1"/>
                    <field name="rejection_reason" placeholder="Nhập lý do từ chối..."/>
                </group>
                <footer>
                    <button name="action_reject" type="object" string="Từ chối" class="btn-danger"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
