<odoo>
  <data>
    <record id="view_attendance_adjustment_form" model="ir.ui.view">
      <field name="name">attendance.adjustment.form</field>
      <field name="model">attendance.adjustment</field>
      <field name="arch" type="xml">
        <form string="Yêu cầu chỉnh công">
          <header>
            <button name="action_submit" type="object" string="Gửi" class="btn-primary" invisible="state != 'draft'"/>
            <button name="action_manager_approve" type="object" string="Duyệt trưởng phòng" class="btn-success" invisible="state != 'waiting_manager'"/>
            <button name="action_hr_approve" type="object" string="Duyệt HR" class="btn-success" invisible="state != 'waiting_hr'"/>
            <button name="action_reject" type="object" string="Từ chối" class="btn-danger" invisible="state not in ('waiting_manager','waiting_hr')"/>
            <button name="action_reset_to_draft" type="object" string="Đặt lại Nháp" class="btn-secondary" invisible="state in ('draft','approved')" groups="attendance_system.group_attendance_hr,base.group_system"/>
            <button name="action_configure_email" type="object" string="Cấu hình Email" class="btn-info" groups="base.group_system"/>
            <button name="action_test_email_config" type="object" string="Kiểm tra Email" class="btn-warning" groups="base.group_system"/>
          </header>
          <sheet>
            <group>
              <field name="name" readonly="1"/>
              <field name="employee_id"/>
              <field name="attendance_id"/>
              <field name="adjustment_type"/>
              <field name="requested_check_in" invisible="adjustment_type not in ('check_in','both')"/>
              <field name="requested_check_out" invisible="adjustment_type not in ('check_out','both')"/>
              <field name="reason"/>
              <field name="state" readonly="1"/>
            </group>
            <chatter/>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_attendance_adjustment_tree" model="ir.ui.view">
      <field name="name">attendance.adjustment.tree</field>
      <field name="model">attendance.adjustment</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="employee_id"/>
          <field name="attendance_id"/>
          <field name="adjustment_type"/>
          <field name="state"/>
          <field name="create_date"/>
        </tree>
      </field>
    </record>

    <record id="action_attendance_adjustment" model="ir.actions.act_window">
      <field name="name">Yêu cầu chỉnh công</field>
      <field name="res_model">attendance.adjustment</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_attendance_adjustment_root" name="Chỉnh công" parent="hr_attendance.menu_hr_attendance_root" sequence="50"/>
    <menuitem id="menu_attendance_adjustment" name="Yêu cầu chỉnh công" parent="menu_attendance_adjustment_root" action="action_attendance_adjustment" sequence="10"/>
  </data>
</odoo>


